    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="events_reached_fytd" data-view="Number" data-title="Reached this fiscal" style="background-color:#1456A9;"></div>
    </li>
    <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div data-id="events_28d_summary" data-view="NumberSplit" data-title1="Reached 28 days" data-title2="Events # 28 days" style="background-color:#1456A9;"></div>
