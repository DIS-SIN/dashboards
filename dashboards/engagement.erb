<div class="gridster">

<div class="section-heading" style="background-color:#1456A9;">
  <h1>Official Events</h1>
</div>

  <ul class="section">    
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="events_text" data-view="List" data-title="Last Event" style="background-color:#1456A9;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="events_num_fytd" data-view="Number" data-title="Events this fiscal" style="background-color:#1456A9;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="events_reached_fytd" data-view="Number" data-title="Reached this fiscal" style="background-color:#1456A9;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="events_28d_summary" data-view="NumberSplit" data-title1="Reached 28 days" data-title2="Events # 28 days" style="background-color:#1456A9;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="events_next_3" data-view="List" data-title="Next Events"  data-moreinfo="ON HOLD - March 16 to April 10" style="background-color:#1456A9;"></div>
    </li>
  </ul>

  <div class="section-heading" style="background-color:#7108AD;">
    <h1>Engagements</h1>
  </div>

  <ul class="section">
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="engagements_text" data-view="List" data-title="Last Engagement" style="background-color:#7108AD;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="engagement_type" data-view="List" data-title="Types" style="background-color:#7108AD;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="engagement_reached_fytd" data-view="Number" data-title="People Reached 19/20" style="background-color:#7108AD;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="engagement_28d_summary" data-view="NumberSplit" data-title1="Reached 28 days" data-title2="Engagements # 28 days" style="background-color:#7108AD;"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="engagements_next_3" data-view="List" data-title="Next Engagements" style="background-color:#7108AD;"></div>
    </li>
  </ul>

  <div class="section-heading" style="background-color:#0880AD;">
    <h1>Social Media</h1>
  </div>

  <ul class="section">
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="ta_tweets" data-view="NumberPercentage" data-title="Tweets" style="background-color:#0880AD;" data-moreinfo="28 day summary"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="ta_impression" data-view="NumberPercentage" data-title="Impressions" style="background-color:#0880AD;" data-moreinfo="28 day summary"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="ta_profile_visits" data-view="NumberPercentage" data-title="Profile Visits" style="background-color:#0880AD;" data-moreinfo="28 day summary"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="ta_mentions" data-view="NumberPercentage" data-title="Mentions" style="background-color:#0880AD;" data-moreinfo="28 day summary"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="ta_followers" data-view="NumberPercentage" data-title="Followers" style="background-color:#0880AD;" data-moreinfo="28 day summary"></div>
    </li>
  </ul>

</div>